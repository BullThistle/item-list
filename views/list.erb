<h2>List of favorite things</h2>

<% @list.each do |item| %>
  <h4><a href="/items/<%= item.id %>"><%= item.name %> <%= item.ranking %></a></h4>
<% end %>

<h4>Add an item to the list:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="ranking">Ranking</label>
    <input id="ranking" name="ranking" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<form method="post" action="/runSort">
  <input class='btn btn-primary' type='button' value='sort'>
</form>
